<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content_create_transaction"
    xmlns:android="http://schemas.android.com/apk/res/android"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.uark.uarkregisterapp.BeginTransaction"
    tools:showIn="@layout/activity_create_transaction"
    >

    <EditText
        android:id="@+id/edit_text_transaction_create_cashier_id"
        android:hint="@string/edit_text_hint_transaction_create_cashier_id"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_text_transaction_create_total_amount"
        android:hint="@string/edit_text_hint_transaction_create_total_amount"
        android:inputType="text"
        android:layout_below="@+id/edit_text_transaction_create_cashier_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edit_text_transaction_create_reference_id"
        android:hint="@string/edit_text_hint_transaction_create_reference_id"
        android:inputType="text"
        android:layout_below= "@+id/edit_text_transaction_create_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edit_text_transaction_create_transaction_type"
        android:hint="@string/edit_text_hint_transaction_create_transaction_type"
        android:inputType="text"
        android:layout_below="@+id/edit_text_transaction_create_reference_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>


    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/button_save"
        android:onClick="saveButtonOnClick"/>


</RelativeLayout>